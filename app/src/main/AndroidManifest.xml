<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brydenfogelman.startupweekend">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- WITHOUT ACTION BAR-->
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"/>
        <activity
            android:name=".FindTrails"
            android:label="@string/title_activity_find_trails"
            android:theme="@style/Theme.AppCompat.Light"/>
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up" />
        <!-- WITH ACTION BAR -->
        <activity
            android:name=".TrailList"
            android:label="@string/title_activity_trail__list"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ListFriends"
            android:label="@string/title_activity_list_friends"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".TrailDetail"
            android:label="@string/title_activity_trail_detail"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".TrailDescription"
            android:label="@string/title_activity_trail_description" />
    </application>

</manifest>
